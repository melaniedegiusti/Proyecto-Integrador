<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logosinfondopng.png" />
	
	<title> On Wheels </title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
	<!-- Header -->
	<%- include('../partials/header') %>
	<!-- /Header -->
	
	<!-- product detail -->
	
	 	<div class="container products-wrapper"> 

			<div class="d-flex align-items-center">
				<h2 class="products-title"> <%= resultado.nombre %> </h2> 
				<p class="product-detail-description">
					<a href="/autos/edit/<%= resultado.id %>" id="editarAuto">Editar</a>
				</p>
			</div>
			<div class="product-detail">
				<div class="row">
					<article class="col-12 col-lg-8 product-detail-info">
						<img src="/images/<%= resultado.image %>" alt="" class="product-detail-img">
						<p id="descripcion"class="product-detail-description"> <%= resultado.descripcion %></p>						
						<a href="/users/perfiles/<%= resultado.usuario.id %>" id="subido"class="product-detail-description"> Subido por:  <%= resultado.usuario.nombre %> <%= resultado.usuario.apellido %></a> 
						
					</article>

					<div class="col-12 col-lg-4">
						<section class="comments">																		
										<%for(let i =0; i<comentarios.length; i+=1){%>
											<article>
												<img src="/images/<%= comentarios[i].usuario.image %>" alt="">
												<div class="data">
													<p class="user">
														<strong> <a href="/users/perfiles/<%= comentarios[i].usuario.id %>" id="user"> <%=comentarios[i].usuario.nombre%> <%=comentarios[i].usuario.apellido%> </a> </strong>
													</p>
													<p><%=comentarios[i].texto%></p>								
												</div>
											</article>
										<%}%>
									
						</section>
						<form class="form" action='' method='POST' >
							<input class="form-input" type="text" value="" name="comentario" placeholder="Agregar comentario">
							<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
						</form>
						<hr>
					</div>
					
				</div>
			</div>
		</div> 
	
	<!-- /product detail -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->

</body>	
</html>